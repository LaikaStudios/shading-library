//
//  Make objects single sided.
//
//  Works on only the selected objects,
//  or the whole scene if nothing is selected.
//
global proc makeSingleSided()
{
    string $currentSelection[] = `ls -selection`;

    string $convertedNodes[];
    string $geoNodes[];

    if (size($currentSelection) > 0) {
        select -hierarchy;
        $geoNodes = `ls -selection -geometry`;
    }
    else
        $geoNodes = `ls -geometry`;

    string $geoNode;
    for ($geoNode in $geoNodes) {
        if (`getAttr ($geoNode + ".doubleSided")`) {
            setAttr ($geoNode + ".doubleSided", 0);
            $convertedNodes[size($convertedNodes)] = $geoNode;
        }
    }

    if (size($convertedNodes) > 0) {
        print ("Converted these objects from Double Sided to Single Sided:\n");
        print ($convertedNodes);
        print ("\n");

        select -replace $convertedNodes;
    }
    else {
        select -replace $currentSelection;

        if (size($currentSelection) == 0)
            print ("Found no objects to make Single Sided.\n\n");
        else
            print ("Found no selected objects to make Single Sided.\n\n");
    }
}
