slim 1 extensions mprater {
  extensions laika vfx {

    template visualizer vector {
        parameter vector value {
            detail mustvary
            default {0 0 0}
        }

        RSLMain {
            generate
output "
            varying vector  _value = [getvar value];
            Ci = color (_value / 2 + vector .5);
"
        }
    }

    template visualizer normal {
        parameter normal value {
            detail mustvary
            default {0 0 0}
        }

        RSLMain {
            generate
output "
            varying normal  _value = [getvar value];
            Ci = color (_value / 2 + normal .5);
"
        }
    }

    template visualizer string {
        parameter string value {
            detail mustvary
            default ""
        }

        RSLMain {
            generate
output "
            uniform string  _value = [getvar value];
            Ci = color 1;
"
        }
    }

  }
}
